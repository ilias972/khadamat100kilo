{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(ts|js)$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/../test/setup-test-env.js"],
  "globals": {
    "NODE_ENV": "test"
  },
  "testTimeout": 30000
}
