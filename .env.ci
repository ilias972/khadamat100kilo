# CI/CD Environment Configuration
# This file contains environment variables specifically for CI/CD pipeline execution

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=khadamat_test
DATABASE_URL=postgres://postgres:postgres@localhost:5432/khadamat_test

# Application Configuration
NODE_ENV=test
CI=true

# Test Configuration
JEST_TIMEOUT=30000
PLAYWRIGHT_TIMEOUT=180000
TEST_RETRIES=2

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
WORKERS=1
MAX_OLD_SPACE_SIZE=4096

# Security Configuration
JWT_SECRET=ci_test_secret_1234567890
JWT_EXPIRES_IN=3600

# API Configuration
API_BASE_URL=http://localhost:3001
FRONTEND_BASE_URL=http://localhost:3000

# Test Data Configuration
TEST_DATA_SEED=true
TEST_DATA_CLEANUP=true